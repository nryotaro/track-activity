<source>
  @type forward
  port 24224
</source>

<match analysis.*>
  @type bigquery_load
  auth_method json_key
  json_key {"private_key": "<%= ENV['GCLOUD_PRIVATE_KEY'] %>", "client_email": "<%= ENV['GOOGLE_CLIENT_EMAIL'] %>"}
  <% table = ENV['BQ_TABLE'].split('.') %>
  project <%= table[0] %>
  dataset <%= table[1] %>
  table <%= table[2] %>
  fetch_schema true
  <buffer>
    path /var/fluentd/bigquery.*.buffer
    flush_at_shutdown true
  </buffer>

  <format>
    @type json
  </format>
</match>
